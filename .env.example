# Alexa-OS Configuration
# Copy this file to .env and customize

# ===================
# REQUIRED SETTINGS
# ===================

# LiveKit API Credentials
# Generate with: openssl rand -base64 32 | tr -d '/+=' | cut -c1-20
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# Ollama LLM Server URL
# Example: http://localhost:11434 or http://your-server-ip:11434
OLLAMA_HOST=

# ===================
# OPTIONAL SETTINGS
# ===================

# LLM Model (default: llama3.2)
OLLAMA_MODEL=llama3.2

# LLM Provider: ollama (default) or anthropic
LLM_PROVIDER=ollama

# Anthropic API Key (required if LLM_PROVIDER=anthropic)
# ANTHROPIC_API_KEY=

# STT Configuration
STT_PROVIDER=whisper
WHISPER_MODEL=base.en
WHISPER_DEVICE=auto
WHISPER_LANGUAGE=en

# TTS Configuration
TTS_PROVIDER=kokoro
KOKORO_VOICE=af_bella

# Wake Word Detection (openWakeWord)
# Enable/disable wake word detection (default: true)
WAKE_WORD_ENABLED=true
# Wake word model to use (default: hey_jarvis_v0.1)
# Available: hey_jarvis_v0.1, alexa_v0.1, hey_mycroft_v0.1, etc.
WAKE_WORD_MODEL=hey_jarvis_v0.1
# Detection confidence threshold 0.0-1.0 (default: 0.5)
WAKE_WORD_THRESHOLD=0.5
# Cooldown between detections in seconds (default: 2.0)
WAKE_WORD_COOLDOWN=2.0
# Session timeout in seconds before returning to listening (default: 10.0)
WAKE_WORD_TIMEOUT=10.0

# LiveKit URL (for external clients, default uses internal docker networking)
# LIVEKIT_URL=ws://localhost:7880

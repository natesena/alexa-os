# Alexa-OS Configuration
# Copy this file to .env and fill in your values

# LiveKit Server Credentials
# Generate with: openssl rand -base64 32 | tr -d '/+=' | cut -c1-20
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# LiveKit Server URL (for clients connecting over network)
# Use ws://localhost:7880 for local development
# Use ws://your-nas-ip:7880 or ws://tailscale-ip:7880 for remote
LIVEKIT_URL=ws://localhost:7880

# LLM Configuration
# Provider: "ollama" (local) or "anthropic" (cloud)
LLM_PROVIDER=ollama

# Ollama (local LLM - default)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Anthropic API Key (optional - for swapping to Claude)
# Uncomment and set LLM_PROVIDER=anthropic to use Claude instead
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenMemory MCP Server (if using)
# OPENMEMORY_URL=http://localhost:8000

# STT Configuration
STT_PROVIDER=whisper
WHISPER_MODEL=base.en

# TTS Configuration
TTS_PROVIDER=kokoro
KOKORO_VOICE=af_bella
